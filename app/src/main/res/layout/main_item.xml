<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/mainItemBack"
            android:src="@drawable/restaurant2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageLoadingAnim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/image_loading"
            />




        <TextView
            android:id="@+id/mainListAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Yelahanka, Bangalore"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/main_item_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:src="@drawable/rest_type"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/typeMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayList"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:text="ITALIAN"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:src="@drawable/truck_time"
            android:layout_marginLeft="15sp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/timeMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayList"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:text="45 MIN"
            android:textStyle="bold"

            android:layout_marginLeft="7dp"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/mainListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"

        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="McDonalds"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Weight"
            android:textSize="15sp"
            android:textColor="@color/lightBlue"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="|"
            android:fontFamily="@font/montserrat"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/MainWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat"
            android:text="15 kg"
            android:textColor="@color/weightGreen2"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    
    <com.nex3z.flowlayout.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:flChildSpacingForLastRow="align"

        >

        <TextView
            android:id="@+id/fruitsPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/category_main_bg"
            android:fontFamily="@font/montserrat"
            android:text="Fruits"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vegetablesPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/category_main_bg"
            android:fontFamily="@font/montserrat"
            android:text="Vegetables"
            android:textColor="@color/black"


            android:textSize="14sp" />

        <TextView
            android:id="@+id/meatPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/category_main_bg"
            android:fontFamily="@font/montserrat"

            android:text="Meat"
            android:textColor="@color/black"


            android:textSize="14sp" />

        <TextView
            android:id="@+id/dairyPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/category_main_bg"
            android:fontFamily="@font/montserrat"
            android:text="Dairy"
            android:textColor="@color/black"


            android:textSize="14sp" />

        <TextView
            android:id="@+id/dishesPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/category_main_bg"
            android:fontFamily="@font/montserrat"
            android:text="Dishes"
            android:textColor="@color/black"


            android:textSize="14sp" />

        <TextView
            android:id="@+id/grainsPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/category_main_bg"
            android:fontFamily="@font/montserrat"
            android:text="Grains"
            android:textColor="@color/black"

            android:textSize="14sp" />




    </com.nex3z.flowlayout.FlowLayout>

   



    







</LinearLayout>