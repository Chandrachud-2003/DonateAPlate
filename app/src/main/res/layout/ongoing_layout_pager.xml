<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"

    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        >

    <ImageView
        android:id="@+id/ongoingImage"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/default_restaurant"
        android:background="@color/colorTransparent"
        />

        <TextView
            android:id="@+id/ongoingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="16sp"
            android:text="Pizza Hut"
            app:layout_constraintTop_toBottomOf="@id/ongoingImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:id="@+id/ongoingWeight"
            android:textSize="16sp"
            android:fontFamily="@font/gilroy_extrabold"
            app:layout_constraintTop_toBottomOf="@id/ongoingName"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="10kg"

            />

        <com.nex3z.flowlayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ongoingWeight"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            app:flChildSpacingForLastRow="align"

            >

            <TextView
                android:id="@+id/fruitsPop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/category_main_bg"
                android:fontFamily="@font/montserrat"
                android:text="Fruits"
                android:visibility="gone"

                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vegetablesPop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/category_main_bg"
                android:fontFamily="@font/montserrat"
                android:text="Vegetables"
                android:textColor="@color/black"
                android:visibility="gone"


                android:textSize="12sp" />

            <TextView
                android:id="@+id/meatPop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/category_main_bg"
                android:fontFamily="@font/montserrat"
                android:visibility="gone"


                android:text="Meat"
                android:textColor="@color/black"


                android:textSize="12sp" />

            <TextView
                android:id="@+id/dairyPop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/category_main_bg"
                android:fontFamily="@font/montserrat"
                android:text="Dairy"
                android:textColor="@color/black"

                android:visibility="gone"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dishesPop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/category_main_bg"
                android:fontFamily="@font/montserrat"
                android:text="Dishes"
                android:textColor="@color/black"
                android:visibility="gone"



                android:textSize="12sp" />

            <TextView
                android:id="@+id/grainsPop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/category_main_bg"
                android:fontFamily="@font/montserrat"
                android:text="Grains"
                android:visibility="gone"

                android:textColor="@color/black"

                android:textSize="12sp" />




        </com.nex3z.flowlayout.FlowLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.cardview.widget.CardView>
</LinearLayout>