<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/bottomDonationImage"
        android:layout_width="141dp"
        android:layout_height="186dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorTransparent"
        android:src="@drawable/dairy_donation_bottom" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"

        >

        <TextView
            android:id="@+id/bottomDonationCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:text="Dairy"
            android:textSize="23sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/bottomDonationItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:text="Milk · Cheese · Eggs · Butter · Ice Cream · Milk Powder · Yogurt · Sour Cream  "
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >

            <TextView
                android:id="@+id/bottomDonationWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/weightGreen2"
                android:fontFamily="@font/montserrat"
                android:text="5kg"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textSize="25sp"
                android:text="·"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/bottomDonationNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:text="5 Items"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>

