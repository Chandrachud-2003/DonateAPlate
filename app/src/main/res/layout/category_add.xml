<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_bg"
    tools:context=".Main_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/main_bg1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_bg"
        android:paddingTop="40dp"
        android:paddingBottom="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_back"
            android:background="@color/colorTransparent"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/CategoryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grain"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"

            />
        <ImageButton
            android:id="@+id/custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_plus2"
            android:background="@color/colorTransparent"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            />


    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@id/relativeLayout"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/foodPicLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        >

        <ImageView
            android:id="@+id/foodPic"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:src="@drawable/circle_apple"

            />

        <ImageButton
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:src="@drawable/icons8_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"

            />

        <ImageButton
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:background="@color/colorTransparent"
            android:rotation="180"

            android:src="@drawable/icons8_left" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodPicLayout">

        <TextView
            android:id="@+id/foodTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"

            >

            <View
                android:id="@+id/divider5"
                android:layout_width="2dp"
                android:layout_height="40dp"

                android:layout_toLeftOf="@id/weightLayout"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:background="@color/gray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="@color/gray"
                android:textSize="20sp"

                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:id="@+id/weightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/addbutton_bg"
                android:layout_alignParentEnd="true"
                android:padding="10dp"


                >

                <ImageButton
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_minus"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorTransparent"
                    />

                <TextView
                    android:id="@+id/weight"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="23sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_plus3"
                    android:background="@color/colorTransparent"
                    android:padding="5dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="20dp"
                    />




            </LinearLayout>





        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="25dp"
            android:background="@color/colorTransparent"
            android:scrollbars="horizontal" />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or add a fruit of your own here! "
        android:textSize="15sp"
        android:background="@color/colorTransparent"
        app:layout_constraintBottom_toTopOf="@id/confirmButton"
        android:shadowColor="@color/colorTransparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/confirmButton"
        android:layout_height="wrap_content"
        android:background="@drawable/categ_button_bg"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="25sp"
        android:paddingBottom="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="17dp"

        />




</androidx.constraintlayout.widget.ConstraintLayout>
